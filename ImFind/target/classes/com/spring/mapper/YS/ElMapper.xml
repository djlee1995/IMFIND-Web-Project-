<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace="com.spring.mapper.MemberMapper는 MemberMapper인퍼페이스(MemberMapper.class)의 이름을 사용한다. -->
<mapper namespace="com.spring.mapper.YS.ElMapper">
	<!-- id는 Mapper.java(여기선 MemberMapper.java)에 동일하게 사용해야된다. -->
	<!-- (202012311235) -->
	<!-- SELECT * FROM emp_copy where deptno = #{deptno} order by empno  -->
	<select id="getElsedata" parameterType="String" resultType="ElVO">		
		<!-- SELECT * FROM LostPost order by Lost_PostNum -->	
		 SELECT * FROM LostPost where id = #{id, jdbcType=VARCHAR}	
		<!-- SELECT * FROM LostPost inner join pay
		on LostPost.Lost_PostNum=Pay.Lost_PostNum 		
		 where id = #{id, jdbcType=VARCHAR} and deal_State='completed'; -->
		<!--SELECT * FROM LostPost, Pay
		 where LostPost.Lost_PostNum=Pay.Lost_PostNum and deal_State='completed';  -->
	<!--	SELECT * FROM LostPost 
		FULL JOIN Pay ON where id = #{id, jdbcType=VARCHAR}	and Lost_PostNum=#{Lost_PostNum, javaType=int};  -->
	</select>  	
	<select id="getPetElsedata" parameterType="String" resultType="ElVO">		
		<!-- SELECT * FROM LostPost order by Lost_PostNum -->	
		SELECT * FROM PetPost where id = #{id, jdbcType=VARCHAR}	
	</select>  
	<select id="getElsePaydata" parameterType="String" resultType="ElVO">		
		<!-- SELECT * FROM Pay order by PayCode -->		
		SELECT * FROM Pay where id = #{id, jdbcType=VARCHAR} 	
	</select>  
		<select id="getElseWhoReplied" parameterType="int" resultType="ElVO">		
		<!-- SELECT * FROM Pay order by PayCode -->		
		SELECT Id FROM LostCom where Lost_PostNum  = #{Lost_PostNum, javaType=int} 	
	</select>  
	<update id="updatePay_Grade" parameterType="ElVO">
		UPDATE pay
			SET Deal_State=#{Deal_State},
				Deal_Date= sysdate,
				 ID=#{Id}, 
				 F_ID=#{F_ID}
			WHERE id = #{id} and Lost_PostNum = #{Lost_PostNum} 
	</update>
	<insert id="insertGrade" parameterType="ElVO" >
		INSERT INTO Grade
		(
			F_ID, 
			grade, 
			ID, 
			Lost_PostNum, 
			Pet_PostNum , 
			grade_date
		)
		VALUES
		( 	
			#{F_ID},
			#{grade},
			#{id}, 
			#{Lost_PostNum},
			#{Pet_PostNum}, 			
			sysdate
		)
	</insert> 
</mapper>